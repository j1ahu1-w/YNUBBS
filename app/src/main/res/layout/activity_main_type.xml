<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Type">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版块1"
            android:textSize="40sp"
            android:layout_margin="10dp"
            android:background="#09C7F7"/>
        <Button
            android:id="@+id/btn_type_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版块2"
            android:textSize="40sp"
            android:layout_margin="10dp"
            android:background="#09C7F7"/>
        <Button
            android:id="@+id/btn_type_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版块3"
            android:textSize="40sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#09C7F7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button

            android:id="@+id/mt_btn_type"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="社区"
            android:background="#22DDDD"/>
        <Button
            android:id="@+id/mt_btn_shida"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_type"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="每日头条"
            android:background="#44A3BB"/>
        <Button
            android:id="@+id/mt_btn_userinfo"
            android:layout_toRightOf="@id/btn_shida"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="个人信息"
            android:background="#44A3BB"/>
    </LinearLayout>

</RelativeLayout>