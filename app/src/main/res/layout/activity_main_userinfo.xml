<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Userinfo">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:text="教工号/学号："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:text="用户名："
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:text="用户密码："
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etv1"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etv2"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etv3"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_type"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="社区"
            android:background="#44A3BB"/>
        <Button
            android:id="@+id/btn_shida"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_type"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="每日头条"
            android:background="#44A3BB"/>
        <Button
            android:id="@+id/btn_userinfo"
            android:layout_toRightOf="@id/btn_shida"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="个人信息"
            android:background="#22DDDD"/>
    </LinearLayout>


</RelativeLayout>